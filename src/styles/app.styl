}
.CooperativePartner{
  background-color:#FAFAFA;
  text-align:center;
  padding:1.3rem 1.3rem;
}
.CooperativePartnerStep{
  width:70%;
  margin:0 auto;
  display:flex;
  margin-top:1.4rem;
  justify-content:space-between;
  flex-direction:row;
  flex-wrap:wrap;
}
.footer{
  background:#000;
  height:3.77rem;
  text-align:left;
}
.footerItem{
  display:flex;
  width:80%;
  height:3.03rem;
  align-items:center;
  margin:0 auto;
  
}
.footerImg{
  border-radius:50%;
  background:#999;
  width:0.9rem;
  height:0.9rem;
  align-self:center;
  flex-grow:0;
  flex-shrink:0;
  margin-right:20px;
}
.minwen{
  color:#959595;
  font-size:0.14rem;
