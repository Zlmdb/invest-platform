*{
  box-sizing:border-box;
}
.App {
  text-align: center;
}

.App-logo {
  animation: App-logo-spin infinite 20s linear;
  height: 80px;
}

.App-header {
  background-color: #222;
  height: 150px;
  padding: 20px;
  color: white;
}

.App-title {
  font-size: 1.5em;
}

.App-intro {
  font-size: large;
}

@keyframes App-logo-spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}
.advanceNum{
  font-size:0.56rem;
  color:#C6AB92;
  padding:0 20px;
  line-height:42px;
}
.advance{
  flex:1
}
.TransactionProcess{
  background-color:fff;
  text-align:center;
  padding:1.3rem 1.3rem;
}
.TransactionProcessStep{
  width:70%;
  margin:0 auto;
  display:flex;
  margin-top:1.4rem;
  justify-content:space-between;
  flex-direction:row;
}
